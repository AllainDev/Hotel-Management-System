<Window x:Class="PhanHuyBinhWPF.Views.CustomerProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhanHuyBinhWPF.Views"
        mc:Ignorable="d"
        Title="Customer Dashboard - FUMiniHotelSystem" 
        Height="750" Width="900" 
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0">

            <TabItem Header="My Profile">
                <Grid Margin="20" HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="MY PROFILE" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                    <Label Grid.Row="1" Grid.Column="0" Content="Full Name:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="1" Grid.Column="1" VerticalContentAlignment="Center" Margin="5"
                             Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"/>

                    <Label Grid.Row="2" Grid.Column="0" Content="Email Address:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="2" Grid.Column="1" VerticalContentAlignment="Center" Margin="5"
                             Text="{Binding Email}" IsReadOnly="True" Background="#EEEEEE"/>

                    <Label Grid.Row="3" Grid.Column="0" Content="Telephone:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="3" Grid.Column="1" VerticalContentAlignment="Center" Margin="5"
                             Text="{Binding Telephone, UpdateSourceTrigger=PropertyChanged}"/>

                    <Label Grid.Row="4" Grid.Column="0" Content="Birthday:" VerticalAlignment="Center" Margin="5"/>
                    <DatePicker Grid.Row="4" Grid.Column="1" VerticalContentAlignment="Center" Margin="5"
                                SelectedDate="{Binding Birthday, UpdateSourceTrigger=PropertyChanged}"/>

                    <Label Grid.Row="5" Grid.Column="0" Content="Password:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="5" Grid.Column="1" VerticalContentAlignment="Center" Margin="5"
                             Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"/>

                    <Button Grid.Row="6" Grid.Column="1" Content="Update My Profile" Command="{Binding UpdateProfileCommand}" 
                            HorizontalAlignment="Left" Padding="15,5" Margin="5,20,5,5"/>

                    <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding ErrorMessage}" Foreground="Red" Margin="5" FontStyle="Italic"/>

                </Grid>
            </TabItem>

            <TabItem Header="My Booking History" >
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="MY BOOKING RESERVATION HISTORY" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>

                    <DataGrid Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" 
                              IsReadOnly="True" ItemsSource="{Binding BookingHistory}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Booking ID" Binding="{Binding BookingReservationId}" Width="100"/>
                            <DataGridTextColumn Header="Booking Date" Binding="{Binding BookingDate, StringFormat='dd/MM/yyyy'}" Width="120"/>
                            <DataGridTextColumn Header="Total Price" Binding="{Binding TotalPrice, StringFormat='C'}" Width="120"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding BookingStatus}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="New Booking">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="1. SELECT ROOMS AND DATES" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="220"/>
                        </Grid.ColumnDefinitions>

                        <DataGrid Grid.Column="0" Margin="0,0,10,0" AutoGenerateColumns="False" CanUserAddRows="False" 
                                  IsReadOnly="True" ItemsSource="{Binding AvailableRooms}"
                                  SelectedItem="{Binding SelectedAvailableRoom}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Room #" Binding="{Binding RoomNumber}" Width="80"/>
                                <DataGridTextColumn Header="Type" Binding="{Binding RoomType.RoomTypeName}" Width="120"/>
                                <DataGridTextColumn Header="Capacity" Binding="{Binding RoomMaxCapacity}" Width="80"/>
                                <DataGridTextColumn Header="Price/Day" Binding="{Binding RoomPricePerDay, StringFormat='C'}" Width="100"/>
                                <DataGridTextColumn Header="Description" Binding="{Binding RoomDetailDescription}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Grid.Column="1" Width="200">
                            <Label Content="Start Date:"/>
                            <DatePicker SelectedDate="{Binding NewBookingStartDate}"/>
                            <Label Content="End Date:" Margin="0,10,0,0"/>
                            <DatePicker SelectedDate="{Binding NewBookingEndDate}"/>
                            <Button Content="Add to Booking" Command="{Binding AddDetailCommand}" Margin="0,20,0,0" Padding="10,5"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Grid.Row="2" Text="2. REVIEW YOUR BOOKING" FontSize="18" FontWeight="Bold" Margin="0,20,0,10" HorizontalAlignment="Center"/>

                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <DataGrid Grid.Column="0" AutoGenerateColumns="False" CanUserAddRows="False" 
                                  IsReadOnly="True" ItemsSource="{Binding PendingBookingDetails}"
                                  SelectedItem="{Binding SelectedPendingDetail}"
                                  Margin="0,0,10,0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Room #" Binding="{Binding Room.RoomNumber}" Width="80"/>
                                <DataGridTextColumn Header="Type" Binding="{Binding Room.RoomType.RoomTypeName}" Width="*"/>
                                <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate, StringFormat='dd/MM/yyyy'}" Width="100"/>
                                <DataGridTextColumn Header="End Date" Binding="{Binding EndDate, StringFormat='dd/MM/yyyy'}" Width="100"/>
                                <DataGridTextColumn Header="Price" Binding="{Binding ActualPrice, StringFormat='C'}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Button Grid.Column="1" Content="Remove Selected" Command="{Binding RemoveDetailCommand}" 
                                VerticalAlignment="Top" Padding="10,5"/>
                    </Grid>

                    <StackPanel Grid.Row="4" HorizontalAlignment="Right" Margin="0,15,0,0">
                        <TextBlock Text="{Binding TotalBookingPrice, StringFormat='Total Price: {0:C}'}" 
                                   FontSize="16" FontWeight="Bold" HorizontalAlignment="Right"/>
                        <Button Content="Confirm and Book" Command="{Binding CreateBookingCommand}" 
                                Padding="15,5" Margin="0,10,0,0"/>
                        <TextBlock Text="{Binding BookingErrorMessage}" Foreground="Red" TextWrapping="Wrap" Margin="0,10,0,0" HorizontalAlignment="Right"/>
                    </StackPanel>

                </Grid>
            </TabItem>

        </TabControl>

        <Button Grid.Row="1" Content="Logout" Command="{Binding LogoutCommand}" 
                HorizontalAlignment="Right" Padding="15,5" Margin="0,10,0,0"/>
    </Grid>
</Window>